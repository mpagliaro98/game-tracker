<UserControl x:Class="GameTrackerWPF.FilterOptionDate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTrackerWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="ComboBoxPreset" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5" SelectedValuePath="Value" DisplayMemberPath="DisplayText" />
        <ComboBox x:Name="ComboBoxType" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="5" SelectedValuePath="Value" DisplayMemberPath="DisplayText" />
        <DatePicker x:Name="DatePicker1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="110" Margin="5" />
        <DatePicker x:Name="DatePicker2" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="110" Margin="5" />
    </Grid>
</UserControl>
