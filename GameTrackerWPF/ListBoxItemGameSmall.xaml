<UserControl x:Class="GameTrackerWPF.ListBoxItemGameSmall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTrackerWPF"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1100">
    <Grid x:Name="GridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Polygon x:Name="DLCIndicator" Points="0,2 0,17, 15,2" Stroke="DarkGoldenrod" Fill="Yellow" StrokeThickness="1" Panel.ZIndex="1" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <Label x:Name="LabelName" />
        <Label x:Name="LabelPlatform" Grid.Column="1" />
        <Label x:Name="LabelStatus" Grid.Column="2" />
        <Grid x:Name="GridCategories" Grid.Column="3" />
        <Label x:Name="LabelFinalScore" Grid.Column="4" />
    </Grid>
</UserControl>
