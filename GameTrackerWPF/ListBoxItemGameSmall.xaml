<UserControl x:Class="GameTrackerWPF.ListBoxItemGameSmall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTrackerWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Label x:Name="LabelName" />
        <Label x:Name="LabelPlatform" Grid.Column="1" />
        <Label x:Name="LabelStatus" Grid.Column="2" />
        <Grid x:Name="GridCategories" Grid.Column="3" />
        <Label x:Name="LabelFinalScore" Grid.Column="4" />
    </Grid>
</UserControl>
