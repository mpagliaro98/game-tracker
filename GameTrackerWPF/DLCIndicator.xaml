<UserControl x:Class="GameTrackerWPF.DLCIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameTrackerWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="DLC" Panel.ZIndex="2" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="12pt" FontWeight="Bold">
            <Label.LayoutTransform>
                <RotateTransform Angle="45" />
            </Label.LayoutTransform>
            <Label.RenderTransform>
                <TranslateTransform X="6" Y="-6" />
            </Label.RenderTransform>
        </Label>
        <Polygon Points="0,2 50,2, 50,52" Stroke="DarkGoldenrod" Fill="Yellow" StrokeThickness="3" Panel.ZIndex="1" HorizontalAlignment="Right" VerticalAlignment="Top" />
    </Grid>
</UserControl>
