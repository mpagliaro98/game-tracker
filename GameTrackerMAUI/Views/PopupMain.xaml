<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="GameTrackerMAUI.Views.PopupMain">
    <VerticalStackLayout Margin="20" Padding="10" Background="{StaticResource White}">
        <Label x:Name="LabelTitle" FontSize="Large" />
        <Label x:Name="LabelMessage" FontSize="Medium" />
        <Entry x:Name="EntryInput" />

        <StackLayout Margin="0,10,0,0" HorizontalOptions="End" Orientation="Horizontal" Spacing="5">
            <Button x:Name="ButtonNo" Clicked="ButtonNo_Clicked" Text="No" />
            <Button x:Name="ButtonYes" Clicked="ButtonYes_Clicked" Text="Yes" />
            <Button x:Name="ButtonCancel" Clicked="ButtonCancel_Clicked" Text="Cancel" />
            <Button x:Name="ButtonOk" Clicked="ButtonOk_Clicked" Text="Ok" />
        </StackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
