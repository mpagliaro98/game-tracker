<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameTrackerMAUI.Views.AboutPage"
             Shell.TabBarIsVisible="False"
             Title="About">
    <ContentPage.Content>
        <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="10">
            <Label x:Name="aboutLabel" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" LineBreakMode="WordWrap" HorizontalTextAlignment="Center" />
            <Button x:Name="ButtonRepo" Text="Go to Project Repository" HorizontalOptions="Center" Clicked="ButtonRepo_Clicked" />
            <Button x:Name="ButtonUpdates" Text="Check for Updates" HorizontalOptions="Center" Clicked="ButtonUpdates_Clicked" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>