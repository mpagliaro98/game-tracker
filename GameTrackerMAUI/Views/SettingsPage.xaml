<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameTrackerMAUI.Views.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout Spacing="5" Padding="5">
            <Button x:Name="generalSettingsButton" Text="General Settings" HorizontalOptions="FillAndExpand" Clicked="generalSettingsButton_Clicked" Margin="0,5,0,0"></Button>
            <Button x:Name="statusButton" Text="Configure Statuses" HorizontalOptions="FillAndExpand" Clicked="statusButton_Clicked"></Button>
            <Button x:Name="categoryButton" Text="Configure Rating Categories" HorizontalOptions="FillAndExpand" Clicked="categoryButton_Clicked"></Button>
            <Button x:Name="rangesButton" Text="Configure Score Ranges" HorizontalOptions="FillAndExpand" Clicked="rangesButton_Clicked"></Button>
            <Button x:Name="aboutButton" Text="About" HorizontalOptions="FillAndExpand" Clicked="aboutButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>