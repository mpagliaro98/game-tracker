<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GameTrackerMobile.Views.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="generalSettingsButton" Text="General Settings" HorizontalOptions="FillAndExpand" Margin="0,5,0,0"></Button>
            <Button x:Name="statusButton" Text="Configure Statuses" HorizontalOptions="FillAndExpand" Clicked="statusButton_Clicked"></Button>
            <Button x:Name="categoryButton" Text="Configure Rating Categories" HorizontalOptions="FillAndExpand"></Button>
            <Button x:Name="rangesButton" Text="Configure Score Ranges" HorizontalOptions="FillAndExpand"></Button>
            <Button x:Name="aboutButton" Text="About" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>