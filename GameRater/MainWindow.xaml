<Window x:Class="GameRater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameRater"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TabControl x:Name="TabsBase">
            <TabItem Header="Games">
                <DockPanel>
                    <Grid x:Name="GamesTop" DockPanel.Dock="Top" >
                        
                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Platforms">
                <DockPanel>
                    <Grid x:Name="PlatformsTop" DockPanel.Dock="Top" >

                    </Grid>
                </DockPanel>
            </TabItem>
            <TabItem Header="Settings">
                <DockPanel>
                    <Grid x:Name="SettingsTop" DockPanel.Dock="Top" >

                    </Grid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
